<div class="panel panel-default" id="comment-{{ comment.id }}">
    <div class="panel-body">
        <div class="media">
            <img src="{{ gravatar(comment.user.email) }}" class="img-circle pull-left media-object"/>
            <div class="media-body">
                {{ comment.content|nl2br|converturls }}
            </div>
        </div>
    </div>
    <div class="panel-footer">{{ comment.user }} {{ time_diff(comment.createdAt) }} ({{ comment.createdAt|date }})</div>
</div>